<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/map"
        tools:context=".MapsActivity"
        android:name="com.google.android.gms.maps.SupportMapFragment" />

    <RelativeLayout
        android:id="@+id/relLayout1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/borderfff"
        android:elevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ic_magnify"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/ic_magnifier" />

        <AutoCompleteTextView
            android:id="@+id/input_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="@null"
            android:layout_marginLeft="50dp"
            android:hint="Where do you like to meet your friends?"
            android:textColor="#000000"
            android:textSize="15sp"
            android:imeOptions="actionSearch"
            android:singleLine="true"
            />

    </RelativeLayout>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/relLayout1"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:scaleType="centerCrop"
            android:background="@drawable/onpressed"
            android:id="@+id/ic_gps"
            android:src="@drawable/ic_gps" />

        <ImageView
            android:id="@+id/ic_partys"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/ic_gps"
            android:layout_marginRight="20dp"
            android:layout_marginTop="40dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_partys2" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/ic_partys"
            android:layout_marginRight="20dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/onpressed"
            android:scaleType="centerCrop"
            android:id="@+id/ic_chat"
            android:src="@drawable/ic_chat"
            />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/ic_chat"
            android:layout_marginRight="20dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/onpressed"
            android:scaleType="centerCrop"
            android:id="@+id/ic_weather"
            android:src="@drawable/ic_weather"
            />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>